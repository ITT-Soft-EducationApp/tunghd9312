<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tranlucent_bg_v" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_white_75"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@+id/tintuyensinh_top1_image_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/tintuyensinh_top1_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/back_onclick"
                android:scaleType="centerCrop"
                android:src="@drawable/beutiful_girl_5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/bg_tranperent_50" >

                <TextView
                    android:id="@+id/tintuyensinh_top1_title1"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical"
                    android:lines="2"
                    android:text="Nữ sinh khiến nhiều fan phát cuồng vì quá xinh xắn, dễ thương"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1" >

                <FrameLayout
                    android:id="@+id/tintuyensinh_top4_image1_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/back_onclick" >

                    <ImageView
                        android:id="@+id/tintuyensinh_top4_image1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginRight="3dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/beutiful_girl_4" />

                    <TextView
                        android:id="@+id/tintuyensinh_top4_title1"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_gravity="bottom"
                        android:layout_marginRight="3dp"
                        android:background="@color/bg_tranperent_50"
                        android:gravity="center_vertical"
                        android:lines="2"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="Nữ sinh khiến nhiều fan phát cuồng vì quá xinh xắn, dễ thương"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1" >

                <FrameLayout
                    android:id="@+id/tintuyensinh_top4_image2_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/back_onclick" >

                    <ImageView
                        android:id="@+id/tintuyensinh_top4_image2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="3dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/beutiful_girl_3" />

                    <TextView
                        android:id="@+id/tintuyensinh_top4_title2"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="3dp"
                        android:background="@color/bg_tranperent_50"
                        android:gravity="center_vertical"
                        android:lines="2"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="Nữ sinh khiến nhiều fan phát cuồng vì quá xinh xắn, dễ thương"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1" >

                <FrameLayout
                    android:id="@+id/tintuyensinh_top4_image3_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/back_onclick" >

                    <ImageView
                        android:id="@+id/tintuyensinh_top4_image3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginRight="3dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/beutiful_girl_2" />

                    <TextView
                        android:id="@+id/tintuyensinh_top4_title3"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_gravity="bottom"
                        android:layout_marginRight="3dp"
                        android:background="@color/bg_tranperent_50"
                        android:gravity="center_vertical"
                        android:lines="2"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="Nữ sinh khiến nhiều fan phát cuồng vì quá xinh xắn, dễ thương"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1" >

                <FrameLayout
                    android:id="@+id/tintuyensinh_top4_image4_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/back_onclick" >

                    <ImageView
                        android:id="@+id/tintuyensinh_top4_image4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="3dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/beutiful_girl_1" />

                    <TextView
                        android:id="@+id/tintuyensinh_top4_title4"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="3dp"
                        android:background="@color/bg_tranperent_50"
                        android:gravity="center_vertical"
                        android:lines="2"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="Nữ sinh khiến nhiều fan phát cuồng vì quá xinh xắn, dễ thương"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>