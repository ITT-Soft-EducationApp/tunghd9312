<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:background="@drawable/button_onclick"
    android:padding="5dp" >

    <itp.android.educationapp.extras.StretchyImageView
        android:id="@+id/tintuyensinh_item_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/beutiful_girl_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tintuyensinh_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="asgagsasga"
            android:singleLine="true"
            android:textColor="@color/text_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tintuyensinh_item_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="asgagsasga"
            android:textColor="@color/text_color_disable"
            android:layout_marginTop="3dp"
            android:textSize="10sp" />
    </LinearLayout>

