<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_selector"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_tranperent_50"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <View
            android:id="@+id/drawer_indicator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_null"
            android:visibility="gone" />

        <TextView
            android:id="@+id/drawer_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="7dp"
            android:paddingTop="10dp"
            android:text="Tin Tuyen sinh"
            android:textColor="@color/text_color_disable"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_selector"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/drawer_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/ic_info" />

            <TextView
                android:id="@+id/drawer_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="ajsgsakjgasg"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/drawer_version"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="Version 1.0.1"
            android:textColor="@color/text_color_disable"
            android:textSize="16sp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>