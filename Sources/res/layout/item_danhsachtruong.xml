<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:background="@drawable/danhsachtruong_item_onclick"
    android:padding="5dp" >

    <itp.android.educationapp.extras.StretchyImageView
        android:id="@+id/danhsachtruong_item_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center_vertical"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/danhsachtruong_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="asgagsasga"
            android:singleLine="true"
            android:textColor="@color/text_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/danhsachtruong_item_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="asgagsasga"
            android:textColor="@color/action_bar"
            android:layout_marginTop="3dp"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>